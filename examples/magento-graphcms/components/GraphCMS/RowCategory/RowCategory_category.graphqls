extend type RowCategory {
  category: CategoryTree
    @resolveTo(
      sourceName: "m2"
      sourceTypeName: "Query"
      sourceFieldName: "categories"
      requiredSelectionSet: "{ categoryUrl }"
      sourceArgs: { filters: { url_key: { eq: "{root.categoryUrl}" } } }
      result: "items[0]"
    )
}
